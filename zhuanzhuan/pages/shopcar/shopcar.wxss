page{
    background-color: #f8f8f8;
    padding-bottom: 90rpx;
}
.address-button{
    padding: 20rpx 0;
}
.user_info_row{
    display:flex;
    padding: 20rpx;
    font-size: 29rpx;
}
.user_info{
    flex:6;
}
.user_phone{
    flex:3;
    text-align: right;
}
.carcontent-top{
    margin-top: 15rpx;
    background-color: #fff;
    padding: 25rpx;
    display:flex;
    font-size: 30rpx;
    border-bottom: 1px solid #eee;
}
.shopcar-title{
    margin-left: 15rpx;
}
.carcontent-item{
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
    background-color: #fff;
}
.checkbox_wrap{
    flex:1;
    display: flex;
    justify-content: center;
    align-items: center;
    /* padding-left: 20rpx; */
}
.image_wrap{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}
.info-wrap{
    flex: 4;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.info-wrap .goods-name{
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    font-size: 34rpx; 
    width: 400rpx;
}
.info-wrap .goods-select{
    font-size: 24rpx;
    color:#666
}
.carcontent-bottom image{
    width: 80%;
}
.goods-price-wrap{
    display: flex;
    justify-content: space-between;

}
.goods-price{
    color:red;
    font-weight: 400;
    font-size: 50rpx;
}
.goods-price text{
    font-size: 30rpx;
}
.goods-num-wrap{
    display: flex;
    
}
.goods-num-wrap .num-edit{
    width: 55rpx;
    height: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #ccc;
    font-size: 52rpx;
}
.goods-num-wrap .goods-num{
    width: 75rpx;
    height: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 400;
}
.footer_tool {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    display: flex;
    border-top: 1rpx solid #ccc;
  }
  .footer_tool .all_chk_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .all_chk_wrap .radio{
      font-size: 36rpx;
  }
  .footer_tool .total_price_wrap {
    flex: 4;
    padding-left: 30rpx;
    text-align: left;
  }
  .footer_tool .total_price_wrap .total_price .total_price_text {
    color: red;
    font-size: 34rpx;
    font-weight: 600;
  }
  .footer_tool .order_pay_wrap {
    flex: 4;
    background-color: #fc221e;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 15rpx;
    margin-right: 20rpx;
  }
  